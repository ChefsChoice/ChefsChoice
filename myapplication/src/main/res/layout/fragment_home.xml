<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 main
    xmlns:app="http://schemas.android.com/apk/res-auto">

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    tools:context=".HomeFragment">
 UI_branch

    <data>
        <variable
            name="trivia"
            type="com.example.myapplication.network.Trivia" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.myapplication.RecipesViewModel" />
    </data>

        <TextView
            android:id="@+id/feelingHungry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="Feeling hungry?"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="Try the Recipe of the Day"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/recipeOfTheDay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feelingHungry"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/recipeOfTheDay"
            android:layout_width="238dp"
            android:layout_height="179dp"
            android:layout_marginBottom="128dp"
            android:src="@drawable/food3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/feelingHungry"
            app:layout_constraintVertical_bias="0.633" />

        <TextView
            android:id="@+id/dishTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="Dish Title"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recipeOfTheDay"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/didYouKnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you know?"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.77" />

        <TextView
            android:id="@+id/foodTrivia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="The red food-coloring carmine used in Skittles and other candies is made from boiled cochineal bugs, a type of beetle."
            app:foodTrivia="@{viewModel.trivia}"
            app:foodTrivia="@{trivia.text}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.057"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/didYouKnow"
            app:layout_constraintVertical_bias="0.131" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>